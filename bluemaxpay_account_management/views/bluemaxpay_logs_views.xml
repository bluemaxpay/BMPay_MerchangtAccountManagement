<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bluemaxpay_logs_tree" model="ir.ui.view">
            <field name="name">BlueMaxPay Logs Tree</field>
            <field name="model">bluemaxpay.logs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="request_time" />
                    <field name="response_time" />
                    <field name="user_id" />
                </tree>
            </field>
        </record>

        <record id="view_bluemaxpay_logs_form" model="ir.ui.view">
            <field name="name">BlueMaxPay Logs Form</field>
            <field name="model">bluemaxpay.logs</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" />
                            </group>
                            <group>
                                <field name="request_time" />
                                <field name="response_time" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Request" name="request_payload">
                                <field name="request_body" widget="ace" options="{'mode': 'python'}" />
                            </page>
                            <page string="Response" name="response_payload">
                                <field name="response_body" widget="ace" options="{'mode': 'python'}" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_bluemaxpay_logs" model="ir.actions.act_window">
            <field name="name">BlueMaxPay Logs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bluemaxpay.logs</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': 0, 'edit': 0, 'delete': 0}</field>
        </record>
    </data>
</odoo>