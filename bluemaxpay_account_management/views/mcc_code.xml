<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_propay_tier" model="ir.ui.view">
            <field name="name">Propay Tier</field>
            <field name="model">propay.tier</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="tier_seq" widget="handle"/>
                    <field name="name"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_propay_tier" model="ir.actions.act_window">
            <field name="name">Propay Tier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">propay.tier</field>
            <field name="view_mode">tree</field>
        </record>

        <record id="view_propay_order_device" model="ir.ui.view">
            <field name="name">Propay Device</field>
            <field name="model">propay.order.device</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0">
                    <field name="o_device_seq" widget="handle"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="device_id"/>
                    <field name="currency" invisible="1"/>
                    <field name="price" class="oe_inline" widget='monetary'
                           options="{'currency_field': 'currency'}"/>
                </tree>
            </field>
        </record>

        <record id="view_propay_order_device_form" model="ir.ui.view">
            <field name="name">Propay Device</field>
            <field name="model">propay.order.device</field>
            <field name="arch" type="xml">
                <form create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="device_id"/>
                                <field name="currency" invisible="1"/>
                                <field name="price" class="oe_inline"
                                       widget='monetary'/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_propay_order_device" model="ir.actions.act_window">
            <field name="name">Propay Device</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">propay.order.device</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="view_propay_device" model="ir.ui.view">
            <field name="name">Propay Device</field>
            <field name="model">propay.device</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="device_seq" widget="handle"/>
                    <field name="name"/>
                    <field name="currency" invisible="1"/>
                    <field name="price" class="oe_inline" widget='monetary'
                           options="{'currency_field': 'currency'}"/>
                </tree>
            </field>
        </record>

        <record id="view_propay_device_form" model="ir.ui.view">
            <field name="name">Propay Device</field>
            <field name="model">propay.device</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="currency" invisible="1"/>
                            <field name="price" class="oe_inline"
                                   widget='monetary'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_propay_device" model="ir.actions.act_window">
            <field name="name">Propay Device</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">propay.device</field>
            <field name="view_mode">tree,form</field>
        </record>

