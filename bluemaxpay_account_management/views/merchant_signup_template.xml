<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="merchant_signup" name="Merchant Signup">
        <t t-call="web.login_layout">
            <div class="auth-sign-up-propay">
                <form class="oe_signup_form_propay_1" role="form" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="row propay_signup_main">
                        <div class="col-md-4">
                            <t t-set="propay_logo"
                               t-value="request.env['ir.config_parameter'].sudo().get_param('bluemaxpay_account_management.propay_logo')"/>
                            <div class="propay_signup_sub">
                                <div class="col-md-12 pro-signup-main field-checkbox">
                                    <input type="checkbox" name="checkbox"
                                           id="checkbox" t-att-value="1"
                                           checked="1"
                                           hidden="1"/>
                                </div>

                                <div class="col-md-12 pro-signup-main manjit"
                                     style="justify-content: center;">
                                    <h3 style="font-weight: 500;">Merchant Account Signup
                                    </h3>
                                </div>
                                <div class="col-md-12 pro-signup-main ">
                                    <small style="color: red;">* Required
                                    </small>
                                </div>
                                <div class="col-md-12 pro-signup-main ">
                                    <t t-set="agreement_propay"
                                       t-value="request.env['ir.config_parameter'].sudo().get_param('bluemaxpay_account_management.propay_agreement')"/>
                                    <label for="login">Your Email
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="login"
                                           t-att-value="login" id="login"
                                           class="form-control form-control-sm"
                                           autofocus="autofocus"
                                           autocapitalize="off"
                                           required="required"
                                           readonly="readonly"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="o_page_header mb3">Owner Data
                                    </label>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label for="first_name">First Name
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="first_name"
                                           t-att-value="first_name"
                                           required="required"
                                           id="first_name"
                                           class="form-control form-control-sm propay"
                                           placeholder="First Name"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label for="last_name">Last Name
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="last_name"
                                           t-att-value="last_name"
                                           required="required"
                                           id="last_name"
                                           class="form-control form-control-sm"
                                           placeholder="Last Name"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label for="initial">Middle Initial
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="initial"
                                           t-att-value="initial"
                                           required="required"
                                           id="initial"
                                           class="form-control form-control-sm"
                                           placeholder="Initial"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label for="date_of_birth">Date Of Birth
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="date" name="date_of_birth"
                                           t-att-value="date_of_birth"
                                           options="{'format': 'YYYY/MM/DD'}"
                                           id="date_of_birth"
                                           class="form-control form-control-sm"
                                           required="required"
                                           placeholder="Date Of Birth"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="SocialSecurityNumber">Social
                                        Security Number
                                    </label>
                                    <input type="text"
                                           name="SocialSecurityNumber"
                                           t-att-value="SocialSecurityNumber"
                                           maxLength="9"
                                           id="SocialSecurityNumber"
                                           class="form-control form-control-sm"
                                           placeholder="Social Security Number"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal" for="Title">Title</label>
                                    <t t-set="propaytitle"
                                       t-value="request.env['propaytitle.page'].sudo().search([('title_active', '=', 'True' )])"/>
                                    <select class="account-type" id="Title" name="Title" required="required">
                                        <t t-foreach="propaytitle" t-as="propaytitle">
                                            <option t-att-value="propaytitle['display_name']">
                                                <t t-esc="propaytitle['display_name']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="OwnerCount">Number Of Owners
                                    </label>
                                    <input type="number"
                                           name="OwnerCount"
                                           required="required"
                                           t-att-value="OwnerCount"
                                           id="OwnerCount"
                                           class="form-control form-control-sm"
                                           placeholder="Number Of Owners"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="Percentage">Ownership Percentage
                                    </label>
                                    <input type="number"
                                           name="Percentage"
                                           required="required"
                                           t-att-value="Percentage"
                                           id="Percentage"
                                           class="form-control form-control-sm"
                                           placeholder="Ownership Percentage"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="o_page_header mb3">Business Address
                                    </label>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="address1">Address 1
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="address1"
                                           t-att-value="address1"
                                           required="required"
                                           id="address1"
                                           class="form-control form-control-sm"
                                           placeholder="Address 1"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="address2">Address 2
                                    </label>
                                    <input type="text" name="address2"
                                           t-att-value="address2"
                                           id="address2"
                                           class="form-control form-control-sm"
                                           placeholder="Address 2"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="apartment_number">Suite
                                        Number
                                    </label>
                                    <input type="text" name="apartment_number"
                                           t-att-value="apartment_number"
                                           id="apartment_number"
                                           class="form-control form-control-sm"
                                           placeholder="Suite Number"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="city">
                                        City
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="city"
                                           t-att-value="city"
                                           required="required"
                                           id="city"
                                           class="form-control  form-control-sm"
                                           placeholder="City"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="country_id">Country
                                        <a style="color: red;">*</a>
                                    </label>

                                    <t t-set="countries"
                                       t-value="request.env['country.code.propay'].sudo().search([])"/>
                                    <select name="country"
                                            class="form-control country">
                                        <option>Countries...</option>
                                        <t t-foreach="countries or []"
                                           t-as="country">
                                            <option t-att-value="country.propay_code">
                                                <t t-esc="country.name.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main"
                                     id="state"/>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal" for="zip">
                                        Zip
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="zip"
                                           required="required"
                                           id="zip"
                                           class="form-control form-control-sm"
                                           placeholder="Zip"/>

                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="phone">
                                        Phone Number
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="tel" name="phone"
                                           t-att-value="phone" maxLength="10"
                                           required="required"
                                           id="phone"
                                           class="form-control form-control-sm"
                                           placeholder="8888888888"
                                           pattern="[0-9]{10}"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="day_phone">Day Phone
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="tel" name="day_phone"
                                           t-att-value="day_phone" maxLength="10"
                                           required="required"
                                           id="day_phone"
                                           class="form-control form-control-sm"
                                           placeholder="8888888888"
                                           pattern="[0-9]{10}"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="o_page_header mb3">Business Data
                                    </label>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="business_legal_name">Business
                                        Legal
                                        Name
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text"
                                           name="business_legal_name"
                                           t-att-value="business_legal_name"
                                           required="required"
                                           id="business_legal_name"
                                           class="form-control form-control-sm"
                                           placeholder="Business Legal Name"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="doing_business_as">Doing
                                        Business As
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="doing_business_as"
                                           t-att-value="doing_business_as"
                                           id="doing_business_as"
                                           required="required"
                                           class="form-control form-control-sm"
                                           placeholder="Doing Business As"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="business_description">Business
                                        Description
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text"
                                           name="business_description"
                                           t-att-value="business_description"
                                           id="business_description"
                                           class="form-control form-control-sm"
                                           placeholder="Business Description"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal" for="ein">
                                        EIN
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="ein"
                                           t-att-value="ein"
                                           id="ein"
                                           class="form-control form-control-sm"
                                           placeholder="EIN"
                                           required="required"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal" for="WebsiteURL">
                                        Website URL
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="url" name="WebsiteURL"
                                           t-att-value="WebsiteURL"
                                           id="WebsiteURL"
                                           class="form-control form-control-sm"
                                           placeholder="Website URL"
                                           required="required"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="monthly_bank_card_volume">Monthly
                                        Bank Card Volume
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="monthly_bank_card_volume"
                                       t-value="request.env['mbcv.value.propay'].sudo().search([])"/>
                                    <select id="monthly_bank_card_volume" name="monthly_bank_card_volume"
                                            t-att-value="monthly_bank_card_volume"
                                            required="required"
                                            class="form-control o_website_form_input">
                                        <option value=""/>
                                        <t t-foreach="monthly_bank_card_volume" t-as="val">
                                            <option t-att-value="val['monthly_number']">
                                                <t t-esc="val['monthly_bank_card_volume']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="Average Ticket">Average Ticket
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="average_ticket"
                                       t-value="request.env['avg.ticket.propay'].sudo().search([])"/>
                                    <select id="average_ticket" name="average_ticket"
                                            t-att-value="average_number"
                                            required="required"
                                            class="form-control o_website_form_input">
                                        <option value=""/>
                                        <t t-foreach="average_ticket" t-as="val">
                                            <option t-att-value="val['average_number']">
                                                <t t-esc="val['average_ticket']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="Highest Ticket">Highest Ticket
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="highest_ticket"
                                       t-value="request.env['highest.ticket.propay'].sudo().search([])"/>
                                    <select id="highest_ticket" name="highest_ticket"
                                            t-att-value="highest_number"
                                            required="required"
                                            class="form-control o_website_form_input">
                                        <option value=""/>
                                        <t t-foreach="highest_ticket" t-as="val">
                                            <option t-att-value="val['highest_number']">
                                                <t t-esc="val['highest_ticket']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="MCC Code">MCC code
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="mcc_code"
                                       t-value="request.env['mcc.code.propay'].sudo().search([])"/>
                                    <select id="mcc_code" name="MCCCode"
                                            t-att-value="MCCCode"
                                            class="form-control o_website_form_input"
                                            required="">
                                        <option value=""/>
                                        <t t-foreach="mcc_code" t-as="mcc_code">
                                            <option t-att-value="mcc_code['name']">
                                                <t t-esc="mcc_code['name']"/>
                                                <t t-set="merchant_type"
                                                   t-value="mcc_code['merchant_type']"/>
                                                <t t-esc="merchant_type"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="o_page_header mb3">Bank Account
                                    </label>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="account_country_code">Account
                                        Country Code
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="account_country_code"
                                       t-value="request.env['country.code.propay'].sudo().search([]) or None"/>
                                    <select id="account_country_code"
                                            name="account_country_code"
                                            t-att-value="country"
                                            class="form-control o_website_form_input"
                                            required="required">
                                        <option value=""/>
                                        <t t-foreach="account_country_code"
                                           t-as="account_country_code">
                                            <option t-att-value="account_country_code['propay_code']">
                                                <t t-esc="account_country_code['propay_code']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="routing_number">Routing Number
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="routing_number"
                                           t-att-value="routing_number"
                                           maxLength="9" required="required"
                                           id="routing_number"
                                           class="form-control form-control-sm"
                                           placeholder="Routing Number"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="bank_account_number">Bank
                                        Account
                                        Number
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text"
                                           name="bank_account_number"
                                           t-att-value="bank_account_number"
                                           id="bank_account_number"
                                           class="form-control form-control-sm"
                                           placeholder="Bank Account Number" required="required"/>

                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="account_ownership_type">Account
                                        Ownership Type
                                        <a style="color: red;">*</a>
                                    </label>
                                    <select class="account-type"
                                            name="account_ownership_type"
                                            t-att-value="account_ownership_type"
                                            id="account_ownership_type" required="required">
                                        <option value=""></option>
                                        <option value="Personal">Personal
                                        </option>
                                        <option value="Business">Business
                                        </option>
                                    </select>

                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="bank_name">Bank Name
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="bank_name"
                                           t-att-value="bank_name"
                                           id="bank_name"
                                           class="form-control form-control-sm"
                                           placeholder="Bank Name" required="required"/>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal" for="account_type">
                                        Account Type
                                        <a style="color: red;">*</a>
                                    </label>
                                    <t t-set="account_type"
                                       t-value="request.env['account_type.page'].sudo().search([('account_type_page_active', '=', 'True' )])"/>
                                    <select id="account_type" name="account_type"
                                            t-att-value="account_type"
                                            class="form-control o_website_form_input"
                                            required="required">
                                        <t t-foreach="account_type" t-as="account_type">
                                            <option t-att-value="account_type['account_type_bluemaxpay']">
                                                <t t-esc="account_type['account_type_display']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="o_page_header mb3">Card Details</label>
                                </div>
                                <div class="col-md-12 pro-signup-main">
                                    <label class="font-weight-normal"
                                           for="time_zone">Time Zone<a style="color: red;">*</a>
                                    </label>
                                    <t t-set="time_zone"
                                       t-value="request.env['propay.timezone'].sudo().search([], order='timezone_seq')"/>
                                    <select id="time_zone" name="time_zone"
                                            t-att-value="time_zone"
                                            class="form-control o_website_form_input"
                                            required="">
                                        <option value=""/>
                                        <t t-foreach="time_zone"
                                           t-as="time_zone">
                                            <option t-att-value="time_zone['name']">
                                                <t t-esc="time_zone['full_name']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-12 pro-signup-main propay-secure" hidden="1">
                                    <label class="font-weight-normal"
                                           for="credit_card_number">Credit Card
                                        Number
                                    </label>
                                    <input type="text"
                                           name="credit_card_number"
                                           t-att-value="credit_card_number"
                                           maxLength="16"
                                           id="credit_card_number"
                                           class="form-control form-control-sm"
                                           placeholder="Credit Card Number"/>

                                </div>
                                <div class="col-md-12 pro-signup-main propay-secure" hidden="1">
                                    <label class="font-weight-normal"
                                           for="name_on_card">Name On Card
                                        <a style="color: red;">*</a>
                                    </label>
                                    <input type="text" name="name_on_card"
                                           t-att-value="name_on_card"
                                           id="name_on_card"
                                           class="form-control form-control-sm"
                                           placeholder="Name On Card"/>
                                </div>
                                <div class="col-md-12 pro-signup-main propay-secure" hidden="1">
                                    <label class="font-weight-normal"
                                           for="expiration_date">Expiration Date
                                    </label>
                                    <input type="text" name="expiration_date"
                                           t-att-value="expiration_date"
                                           maxLength="4" id="expiration_date"
                                           class="form-control form-control-sm"
                                           placeholder="Expiration Date"/>
                                </div>
                                <div class="col-md-12 pro-signup-main propay-secure" hidden="1">
                                    <label class="font-weight-normal" for="cvv">
                                        CVV
                                    </label>
                                    <input type="text" name="cvv"
                                           t-att-value="cvv"
                                           maxLength="4" id="cvv"
                                           class="form-control form-control-sm"
                                           placeholder="CVV"/>
                                </div>
                                <div class="col-md-12 pro-signup-main propay-secure">
                                    <label class="font-weight-normal"
                                           for="currency_code">Currency Code
                                    </label>
                                    <t t-set="currency"
                                       t-value="request.env['res.currency'].search([])"/>
                                    <select id="currency" name="currency_code"
                                            t-att-value="currency_code"
                                            class="form-control o_website_form_input"
                                            required="required">
                                        <t t-foreach="currency" t-as="currency">
                                            <option t-att-value="currency['name']">
                                                <t t-esc="currency['name']"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <t t-set="agreement_propay"
                                   t-value="request.env['bluemaxpay.agreement'].sudo().search([])"/>
                                <t t-foreach="agreement_propay" t-as="agreement_propay">
                                    <div class="col-md-12 pro-signup-main">
                                        <div>
                                            <t t-raw="agreement_propay.heading"/>
                                        </div>
                                    </div>
                                    <div class="col-md-12 pro-signup-main">
                                        <div class="form-group field-agreement">
                                            <t t-raw="agreement_propay.description"/>
                                        </div>
                                    </div>
                                    <div class="col-md-12 pro-signup-main">
                                        <a t-attf-href="/bluemaxpay/agreement/download/#{agreement_propay.id}"
                                           role="button">Print Agreement
                                        </a>
                                    </div>
                                    <div class="col-md-12 pro-signup-main pro-agreement">
                                        <div class="agreement-propay pro-agreement">
                                            <input class="agreement-bluemaxpay"
                                                   type="checkbox"
                                                   name="agreement"/>
                                            <b>I agree the terms and condition
                                                <a style="color: red;">*</a>
                                            </b>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <div class="logo-main">
                                <div class="logo">
                                    <img t-attf-src="data:image/*;base64,{{propay_logo}}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="propay-sign-up-button">
                            <p class="alert alert-danger" t-if="error"
                               role="alert">
                                <t t-esc="error"/>
                            </p>
                            <input type="hidden" name="redirect"
                                   t-att-value="redirect"/>
                            <input type="hidden" name="token"
                                   t-att-value="token"/>
                        </div>
                        <div class="text-center oe_login_buttons oe_login_buttons pt-3">
