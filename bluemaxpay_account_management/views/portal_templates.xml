    <template id="my_merchant_account_user_created_tokens"
              name="User Created Tokens">
        <t t-call="portal.portal_layout">
            <br/>
            <div class="row container">
                <div class="col-12">
                    <t t-set="values"
                       t-value="request.env['zillo.token'].sudo().search([])"/>
                    <t t-foreach="values" t-as="value">
                        <div class="card col-lg-3"
                             style="float: left; height: 112px;">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <t t-esc="value.partner_id.name"/>
                                </h5>
                                <h4 class="card-title">
                                    <t t-esc="value.name"/>
                                </h4>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
            <br/>
            <div>
                <a href="/my/merchant/account/user/token"
                   class="btn btn-primary">
                    <i class="mx-1"/>
                    User Token
                </a>
            </div>
        </t>
    </template>

    <template id="my_merchant_account_user_token" name="User Token">
        <t t-call="portal.portal_layout">
            <div class="row upload-document-merchant">
                <form action="/my/merchant/account/user/token" method="post"
                      style="width: 80%;">
                    <input type="hidden" name="csrf_token"
                           t-att-value="request.csrf_token()"/>
                    <h3>Token Creation</h3>
                    <div class="form-group">
                        <label for="name">Card Holder Name:</label>
                        <input type="text" id="name"
                               class="form-control"
                               name="name" required="required"
                               t-att-value="name"/>
                    </div>
                    <div class="form-group">
                        <label for="number">Card Number:</label>
                        <input type="text" id="number"
                               placeholder="**** **** *** ****"
                               class="form-control" maxlength="16"
                               name="number" required="required"
                               t-att-value="number"/>
                    </div>
                    <div class="form-group">
                        <label for="exp_month">Exp Month:</label>
                        <input type="number" id="exp_month"
                               class="form-control" min="1" max="12"
                               name="exp_month" required="required"
                               t-att-value="exp_month"/>
                    </div>
                    <div class="form-group">
                        <label for="exp_year">Exp Year:</label>
                        <input type="number" id="exp_year"
                               class="form-control" min="2020" max="3000"
                               name="exp_year" required="required"
                               t-att-value="exp_year"/>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV:</label>
                        <input type="text" id="cvv"
                               class="form-control" maxlength="4"
                               name="cvv" required="required"
                               t-att-value="cvv"/>
                    </div>

                    <div>
                        <p class="alert alert-danger" t-if="error" role="alert">
                            <t t-esc="error"/>
                        </p>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        Create token
                    </button>

                </form>
            </div>
        </t>
    </template>

