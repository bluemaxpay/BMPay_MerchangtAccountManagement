<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="is_merchant" invisible="1"/>
                </xpath>
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="Merchant Account" name="merchant_account" invisible="not is_merchant">
                        <group string="Address">
                            <group>
                                <field name="first_name"/>
                                <field name="initial"/>
                                <field name="even_phone"/>
                            </group>
                            <group>
                                <field name="last_name"/>
                                <field name="day_phone"/>
                            </group>
                        </group>
                        <group string="Bank Account">
                            <group>
                                <field name="account_country_code"/>
                                <field name="bank_account_number"/>
                                <field name="routing_number"/>
                            </group>
                            <group>
                                <field name="account_ownership_type"/>
                                <field name="bank_name"/>
                                <field name="account_type"/>
                            </group>
                        </group>
                        <group string="Address Details">
                            <group>
                                <field name="propay_apartment_number"/>
                                <field name="propay_address"/>
                                <field name="propay_city"/>
                            </group>
                            <group>
                                <field name="propay_state"/>
                                <field name="propay_country"/>
                                <field name="propay_zip"/>
                            </group>
                        </group>
                        <group string="Device Details">
                            <field name="partner_device_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="nickname" />
                                    <field name="name" required="1"/>
                                    <field name="unique_device_id" />
                                    <field name="license" />
                                    <field name="site" />
                                    <field name="device_id" />
                                    <field name="serial_number" />
                                    <field name="username" />
                                    <field name="password" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_country_code_propay_tree" model="ir.ui.view">
            <field name="name">MCC Code</field>
            <field name="model">country.code.propay</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name" options="{'no_create': True, 'no_open': True}"/>
                    <field name="code"/>
                    <field name="propay_code"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record id="action_country_code_propay" model="ir.actions.act_window">
            <field name="name">Propay Country Code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">country.code.propay</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>