<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="merchant_account_edit" string="Merchant Account Management" type="object"
                            class="oe_highlight" data-hotkey="w"
                            invisible="merchant_active != 'active'"/>
                    <button name="create_merchant" string="Create Merchant Account" type="object" data-hotkey="q"
                            invisible="is_merchant or create_merchant_wizard_id"/>
                    <button name="action_view_merchant" string="View Merchant Account" type="object" data-hotkey="q"
                            invisible="is_merchant or not create_merchant_wizard_id"/>
                    <button name="send_merchant_account_form" string="Send Merchant Account Invitation" type="object"
                            invisible="merchant_active"
                            data-hotkey="q" />
                    <button name="change_merchant_password" string="Change Merchant Password" type="object"
                            invisible="not is_merchant"
                            data-hotkey="q" />
                    <button name="ach_transaction" string="ACH Transaction" type="object" data-hotkey="q"
                            invisible="not is_merchant"/>
                    <widget name="sso_management" title="SSO Management" btnClass="sso_management"/>
                </xpath>
                <xpath expr="//field[@name='login']" position="after">
                    <group>
                        <group>
                            <field name="is_merchant" invisible="1"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Merchant Account" name="merchant_account"
                          invisible="not is_merchant">
                        <group string="Merchant Account Details">
                            <group>
                                <field name="account_number"/>
                                <field name="beneficial_owner_count"/>
                            </group>

                            <group>
                                <field name="merchant_password" />
                                <field name="merchant_active"/>
                                <field name="create_merchant_wizard_id" invisible="1"/>
                            </group>
                        </group>
                        <group string="Address">
                            <group>
                                <field name="first_name"/>
                                <field name="initial"/>
                                <field name="even_phone"/>
                            </group>
                            <group>
                                <field name="last_name"/>
                                <field name="day_phone"/>
                            </group>
                        </group>
                        <group string="Bank Account">
                            <group>
                                <field name="decoded_account_country_code" />
                                <field name="decoded_bank_account_number" />
                                <field name="decoded_routing_number" />
                            </group>
                            <group>
                                <field name="decoded_account_ownership_type" />
                                <field name="decoded_bank_name" />
                                <field name="decoded_account_type" />
                            </group>
                        </group>
                        <group string="Address Details">
                            <group>
                                <field name="propay_apartment_number"/>
                                <field name="propay_address"/>
                                <field name="propay_city"/>
                            </group>
                            <group>
                                <field name="propay_state"/>
                                <field name="propay_country"/>
                                <field name="propay_zip"/>
                            </group>
                        </group>
                        <group string="Device Details">
                            <field name="partner_device_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="nickname" />
                                    <field name="name" required="1"/>
                                    <field name="unique_device_id" />
                                    <field name="license" />
                                    <field name="site" />
                                    <field name="device_id" />
                                    <field name="serial_number" />
                                    <field name="username" />
                                    <field name="password" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="propay_api_keys" string="Propay API Keys">
                        <group>
                            <field name="propay_public_key" />
                            <field name="propay_secret_key" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>