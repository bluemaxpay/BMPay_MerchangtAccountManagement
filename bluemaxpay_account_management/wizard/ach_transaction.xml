<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ach_transaction_form_view" model="ir.ui.view">
            <field name="name">ACH Transaction</field>
            <field name="model">ach.transaction</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group>
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="amount"/>
                            <field name="routing_number"/>
                            <field name="account_name"/>
                        </group>
                        <group>
                            <field name="account_type"/>
                            <field name="standard_entry_class_code"/>
                            <field name="inv_num"/>
                        </group>
                    </group>
                    </sheet>

                <footer>
                    <button string="Save" name="ach_transaction" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
                </form>
            </field>
        </record>

        <record id="action_ach_transaction" model="ir.actions.act_window">
            <field name="name">ACH Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ach.transaction</field>
            <field name="view_mode">form</field>
        </record>
    </data>
</odoo>
