            <field name="view_mode">form</field>
        </record>

        <record id="create_merchant_form_view" model="ir.ui.view">
            <field name="name">Create Merchant</field>
            <field name="model">create.merchant</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Personal Data">
                            <group>
                                <field name="user_id" invisible="1"/>
                                <field name="name"/>
                                <field name="last_name"/>
                                <field name="initial"/>
                                <field name="date_of_birth"/>
                                <field name="social_security_number"/>
                            </group>
                        </group>
                        <group string="Business Address">
                            <group>
                                <field name="apartment_number"/>
                                <field name="address"/>
                                <field name="city"/>
                                <field name="country_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="res_country_id" invisible="1"/>
                                <field name="state_id" domain="[('country_id', '=', res_country_id)]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="zip"/>
                                <field name="day_phone"/>
                                <field name="even_phone"/>
                            </group>
                        </group>
                        <group string="Business Data">
                            <group>
                                <field name="business_legal_name"/>
                                <field name="doing_business_as"/>
                                <field name="business_description"/>
                                <field name="ein"/>
                                <field name="website_url"/>
                                <field name="monthly_card_volume_id"/>
                                <field name="average_ticket_id"/>
                                <field name="highest_ticket_id"/>
                                <field name="mcc_code_id"/>
                            </group>
                        </group>
                        <group string="Bank Account">
                            <group>
                                <field name="account_country_code_id"/>
                                <field name="routing_number"/>
                                <field name="bank_account_number"/>
                                <field name="account_ownership_type"/>
                                <field name="bank_name"/>
                                <field name="account_type_id"/>
                            </group>
                        </group>
                        <group string="Card Details">
                            <group>
                                <field name="time_zone_id"/>
                                <field name="tier_id"/>
                                <field name="currency_code_id"/>
                            </group>
                        </group>
                        <group string="User Info.">
                            <group>
                                <field name="account_number" />
                                <field name="username" />
                                <field name="password" password="True"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Save" name="create_merchant" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_create_merchant" model="ir.actions.act_window">
            <field name="name">Create Merchant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">create.merchant</field>
            <field name="view_mode">form</field>
