<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="order_device_form_view" model="ir.ui.view">
            <field name="name">Order Device</field>
            <field name="model">order.device</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <group string="Shipping Address">
                        <group>
                            <field name="user_id" invisible="1"/>
                            <field name="ship_to"/>
                            <field name="ship_to_address2"/>
                            <field name="ship_to_city"/>
                            <field name="ship_to_zip"/>
                        </group>
                        <group>
                            <field name="ship_to_address"/>
                            <field name="ship_to_contact"/>
                            <field name="ship_to_state"/>
                            <field name="ship_to_phone"/>
                        </group>
                    </group>
<!--                        <group string="Card Details">-->
<!--                            <group>-->
<!--                                <field name="cardholder_name"/>-->
<!--                                <field name="exp_date"/>-->
<!--                                <field name="billing_zip"/>-->
<!--                            </group>-->
<!--                            <group>-->
<!--                                <field name="cc_num"/>-->
<!--                                <field name="CVV2"/>-->
<!--                            </group>-->
<!--                        </group>-->
                        <group string="Device Details">
                            <group>
                                <field name="propay_device_id"/>
                                <field name="device_nickname"/>
                            </group>
                            <group>
                                <field name="qty"/>
                            </group>
                        </group>
                    </sheet>
                <footer>
                    <button string="Save" name="order_device" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
                </form>
            </field>
        </record>

        <record id="action_order_device" model="ir.actions.act_window">
            <field name="name">Order Device</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">order.device</field>
            <field name="view_mode">form</field>
        </record>

    </data>
</odoo>